{
  "manifest_version": 2,
  "name": "Nexial Helper",
  "version": "2.0",
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["contentScript.js"]
		}
	],
	"background": { 
    "scripts": ["background.js", "activityTracker/contextMenu.js"], 
    "persistent": false
  },
  "permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "http://*/*",
    "https://*/*",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "nexial helper for script"
  }
}
