{
  "manifest_version": 2,
  "name": "Nexial WebEZ",
  "version": "1.0.0",

  "description": "Kick your web automation into high gear with Nexial WebEZ!",

  "icons": {
    "16": "resources/img/nexial-16.png",
    "32": "resources/img/nexial-32.png",
    "64": "resources/img/nexial-64.png",
    "128": "resources/img/nexial-128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["resources/scripts/console.js", "inspection/contentScript.js"]
    }
  ],
  "background": {
    "scripts": ["resources/scripts/console.js", "inspection/background.js", "inspection/contextMenu.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab"
  ],

  "browser_action": {
    "default_icon": {
      "64": "resources/img/nexial-64.png"
    },
    "default_popup": "NexialWebEZ.html",
    "default_title": "Nexial WebEZ - Kick Your Web Automation into High Gear!"
  },

  "web_accessible_resources": [ "resources/style/nexial.css" ]
}
